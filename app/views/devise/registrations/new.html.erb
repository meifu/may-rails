<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-inputs">
  
	  <div><%= f.label :email %><br />
	  <%= f.email_field :email, :required => true, :autofocus => true %></div>

	  <div><%= f.input:name, :required => true, :autofocus => true %></div>
	  <%= %>

	  <div><%= f.label :password %><br />
	  <%= f.password_field :password, :required => true %></div>

	  <div><%= f.label :password_confirmation %><br />
	  <%= f.password_field :password_confirmation, :required => true %></div>

	  <div><%= f.submit "Sign up" %></div>

	</div>
<% end %>

<%= render "devise/shared/links" %>
